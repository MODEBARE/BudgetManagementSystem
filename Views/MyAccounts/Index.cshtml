@using BudgetSystem.ViewModels
@model MyAccountsViewModel
@{
    ViewData["Title"] = "My Accounts";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="fas fa-wallet me-2 text-primary"></i>My Accounts
            </h2>
            <p class="text-muted mb-0">Manage your financial accounts and balances</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Account
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-wallet fa-lg text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="fw-bold mb-0">Total Balance</h6>
                            <h4 class="text-primary fw-bold mb-0">@Model.GetCurrencySymbol()@Model.TotalBalance.ToString("N2")</h4>
                            <small class="text-muted">Across all active accounts</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-check-circle fa-lg text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="fw-bold mb-0">Active Accounts</h6>
                            <h4 class="text-success fw-bold mb-0">@Model.ActiveAccountsCount</h4>
                            <small class="text-muted">Currently active</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-pause-circle fa-lg text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="fw-bold mb-0">Inactive Accounts</h6>
                            <h4 class="text-warning fw-bold mb-0">@Model.InactiveAccountsCount</h4>
                            <small class="text-muted">Currently inactive</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-list fa-lg text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="fw-bold mb-0">Total Accounts</h6>
                            <h4 class="text-info fw-bold mb-0">@Model.Accounts.Count</h4>
                            <small class="text-muted">All accounts</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Accounts List -->
    @if (Model.Accounts.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="fw-bold mb-0">
                    <i class="fas fa-list me-2"></i>Account Details
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Account</th>
                                <th scope="col">Type</th>
                                <th scope="col">Balance</th>
                                <th scope="col">Change</th>
                                <th scope="col">Transactions</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model.Accounts.OrderByDescending(a => a.IsActive).ThenBy(a => a.Name))
                            {
                                <tr class="@(account.IsActive ? "" : "table-secondary")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <div class="bg-@(account.GetAccountTypeColor()) bg-opacity-10 rounded-circle p-2">
                                                    <i class="@(account.GetAccountTypeIcon()) text-@(account.GetAccountTypeColor())"></i>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="fw-semibold mb-0">@account.Name</h6>
                                                @if (!string.IsNullOrEmpty(account.Description))
                                                {
                                                    <small class="text-muted">@account.Description</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(account.GetAccountTypeColor())">
                                            @account.AccountType.ToString()
                                        </span>
                                    </td>
                                    <td>
                                        <strong class="@(account.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                                            @Model.GetCurrencySymbol()@account.CurrentBalance.ToString("N2")
                                        </strong>
                                    </td>
                                    <td>
                                        <span class="@account.GetBalanceChangeClass()">
                                            @account.GetBalanceChange()
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            @account.TransactionCount
                                        </span>
                                    </td>
                                    <td>
                                        @if (account.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", new { id = account.Id })" 
                                               class="btn btn-sm btn-outline-info" 
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = account.Id })" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Edit Account">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="ToggleStatus" asp-route-id="@account.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" 
                                                        class="btn btn-sm btn-outline-@(account.IsActive ? "warning" : "success")" 
                                                        title="@(account.IsActive ? "Deactivate" : "Activate")"
                                                        onclick="return confirm('@(account.IsActive ? "Deactivate" : "Activate") this account?')">
                                                    <i class="fas fa-@(account.IsActive ? "pause" : "play")"></i>
                                                </button>
                                            </form>
                                            @if (account.TransactionCount == 0)
                                            {
                                                <a href="@Url.Action("Delete", new { id = account.Id })" 
                                                   class="btn btn-sm btn-outline-danger" 
                                                   title="Delete Account">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-wallet fa-4x text-muted opacity-50"></i>
                </div>
                <h4 class="fw-bold mb-3">No Accounts Found</h4>
                <p class="text-muted mb-4">You haven't created any accounts yet. Create your first account to start managing your finances.</p>
                <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Create Your First Account
                </a>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-rocket me-2 text-primary"></i>Quick Actions
                    </h6>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create")" class="btn btn-outline-primary">
                            <i class="fas fa-plus me-2"></i>Add New Account
                        </a>
                        <a href="@Url.Action("Transfer", "Transactions")" class="btn btn-outline-warning">
                            <i class="fas fa-exchange-alt me-2"></i>Transfer Money
                        </a>
                        <a href="@Url.Action("Index", "Transactions")" class="btn btn-outline-info">
                            <i class="fas fa-history me-2"></i>View Transactions
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-info-circle me-2 text-info"></i>Account Management Tips
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            <small>Organize accounts by purpose (checking, savings, etc.)</small>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            <small>Deactivate accounts you no longer use</small>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            <small>Regular transfers help with budgeting</small>
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-check text-success me-2"></i>
                            <small>Keep descriptions clear and informative</small>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 