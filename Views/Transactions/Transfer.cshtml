@using BudgetSystem.ViewModels
@model TransferViewModel
@{
    ViewData["Title"] = "Transfer Money";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body bg-primary text-white rounded">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="fw-bold mb-1">
                                <i class="fas fa-exchange-alt me-2"></i>Transfer Money
                            </h3>
                            <p class="mb-0 opacity-75">Move money between your accounts</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-right-arrow-left fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Transfer" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <!-- Amount and Date Row -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Amount" class="form-label fw-semibold">
                                        <i class="fas fa-dollar-sign text-primary me-1"></i>
                                        @Html.DisplayNameFor(m => m.Amount)
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-primary text-white">$</span>
                                        <input asp-for="Amount" class="form-control form-control-lg" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Amount" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TransferDate" class="form-label fw-semibold">
                                        <i class="fas fa-calendar text-primary me-1"></i>
                                        @Html.DisplayNameFor(m => m.TransferDate)
                                    </label>
                                    <input asp-for="TransferDate" class="form-control form-control-lg" type="date" />
                                    <span asp-validation-for="TransferDate" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Account Selection Row -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SourceAccountId" class="form-label fw-semibold">
                                        <i class="fas fa-arrow-up text-danger me-1"></i>
                                        @Html.DisplayNameFor(m => m.SourceAccountId)
                                    </label>
                                    <select asp-for="SourceAccountId" asp-items="Model.SourceAccounts" class="form-select form-select-lg" id="sourceAccount">
                                        <option value="">-- Select Source Account --</option>
                                    </select>
                                    <span asp-validation-for="SourceAccountId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DestinationAccountId" class="form-label fw-semibold">
                                        <i class="fas fa-arrow-down text-success me-1"></i>
                                        @Html.DisplayNameFor(m => m.DestinationAccountId)
                                    </label>
                                    <select asp-for="DestinationAccountId" asp-items="Model.DestinationAccounts" class="form-select form-select-lg" id="destinationAccount">
                                        <option value="">-- Select Destination Account --</option>
                                    </select>
                                    <span asp-validation-for="DestinationAccountId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Transfer Details -->
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="Description" class="form-label fw-semibold">
                                        <i class="fas fa-edit text-info me-1"></i>
                                        @Html.DisplayNameFor(m => m.Description)
                                    </label>
                                    <input asp-for="Description" class="form-control form-control-lg" placeholder="e.g., Monthly savings transfer, Emergency fund allocation" />
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TransferFee" class="form-label fw-semibold">
                                        <i class="fas fa-percent text-warning me-1"></i>
                                        @Html.DisplayNameFor(m => m.TransferFee)
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="TransferFee" class="form-control form-control-lg" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="TransferFee" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Category and Reference Row -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Category" class="form-label fw-semibold">
                                        <i class="fas fa-tags text-warning me-1"></i>
                                        @Html.DisplayNameFor(m => m.Category)
                                    </label>
                                    <select asp-for="Category" asp-items="Model.TransferCategories" class="form-select form-select-lg">
                                        <option value="">-- Select Transfer Category --</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Reference" class="form-label fw-semibold">
                                        <i class="fas fa-hashtag text-secondary me-1"></i>
                                        @Html.DisplayNameFor(m => m.Reference)
                                    </label>
                                    <input asp-for="Reference" class="form-control form-control-lg" placeholder="e.g., Transfer #TXN-2024-001" />
                                    <span asp-validation-for="Reference" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Notes -->
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-semibold">
                                <i class="fas fa-sticky-note text-info me-1"></i>
                                @Html.DisplayNameFor(m => m.Notes)
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional details about this transfer..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <!-- Transfer Summary (shown when both accounts selected) -->
                        <div id="transferSummary" class="alert alert-info d-none mb-4">
                            <h6 class="fw-bold">
                                <i class="fas fa-calculator me-2"></i>Transfer Summary
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">Transfer Amount:</small><br>
                                    <strong id="transferAmount">$0.00</strong>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">Transfer Fee:</small><br>
                                    <strong id="transferFeeDisplay">$0.00</strong>
                                </div>
                            </div>
                            <hr class="my-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">Total Deducted from Source:</small><br>
                                    <strong id="totalDeduction" class="text-danger">$0.00</strong>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">Amount Added to Destination:</small><br>
                                    <strong id="amountAdded" class="text-success">$0.00</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-exchange-alt me-2"></i>Review Transfer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Tips -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="fw-bold mb-0">
                        <i class="fas fa-lightbulb text-warning me-2"></i>Transfer Guidelines
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Check balances:</strong> Ensure sufficient funds in source account
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Review details:</strong> Double-check amounts and accounts before confirming
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Transfer fees:</strong> Some account types may have transfer fees
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    <strong>Keep records:</strong> Use reference numbers for tracking
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update transfer summary when amounts or accounts change
            function updateTransferSummary() {
                const amount = parseFloat($('#Amount').val()) || 0;
                const fee = parseFloat($('#TransferFee').val()) || 0;
                const totalDeduction = amount + fee;

                $('#transferAmount').text('$' + amount.toFixed(2));
                $('#transferFeeDisplay').text('$' + fee.toFixed(2));
                $('#totalDeduction').text('$' + totalDeduction.toFixed(2));
                $('#amountAdded').text('$' + amount.toFixed(2));

                // Show/hide summary based on whether we have required data
                if (amount > 0 && $('#SourceAccountId').val() && $('#DestinationAccountId').val()) {
                    $('#transferSummary').removeClass('d-none');
                } else {
                    $('#transferSummary').addClass('d-none');
                }
            }

            // Update destination accounts when source account changes
            $('#SourceAccountId').change(function() {
                const sourceAccountId = $(this).val();
                // Remove source account from destination options
                $('#DestinationAccountId option').each(function() {
                    if ($(this).val() === sourceAccountId) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                });
                updateTransferSummary();
            });

            // Bind events
            $('#Amount, #TransferFee, #DestinationAccountId').on('input change', updateTransferSummary);
        });
    </script>
} 