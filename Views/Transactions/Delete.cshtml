@using BudgetSystem.ViewModels
@model DeleteTransactionViewModel
@{
    ViewData["Title"] = $"Delete {Model.TypeDisplay} - {Model.Description}";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Transactions</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", new { id = Model.Id })">Details</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
            <h2 class="fw-bold mb-0 text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Delete @Model.TypeDisplay Transaction
            </h2>
            <p class="text-muted mb-0">Permanently remove this @Model.TypeDisplay.ToLower() transaction</p>
        </div>
    </div>

    @if (!Model.CanDelete)
    {
        <!-- Deletion Restriction Alert -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-danger border-0 shadow-sm">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-ban fa-2x me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Transaction Cannot Be Deleted</h5>
                            <p class="mb-0">@Model.DeleteRestrictionReason</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Details
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Edit Instead
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Warning Alert -->
                <div class="alert alert-danger border-0 shadow-sm mb-4">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-triangle fa-2x me-3 text-danger"></i>
                        <div>
                            <h5 class="alert-heading">⚠️ This action cannot be undone!</h5>
                            <p class="mb-2">
                                You are about to permanently delete this transaction. This will:
                            </p>
                            <ul class="mb-0">
                                <li>Remove the transaction from all reports and listings</li>
                                <li>Adjust your <strong>@Model.AccountName</strong> account balance by 
                                    <strong class="text-@(Model.Type == TransactionType.Credit ? "danger" : "success")">
                                        @(Model.Type == TransactionType.Credit ? "-" : "+")@Model.GetCurrencySymbol()@Model.Amount.ToString("N2")
                                    </strong>
                                </li>
                                <li>Create a permanent audit record of this deletion</li>
                                @if (Model.HasReceipt)
                                {
                                    <li>Remove the attached receipt file</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Transaction Details to Review -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-@Model.TypeColor bg-opacity-10">
                        <h5 class="fw-bold mb-0">
                            <i class="fas @Model.TypeIcon me-2"></i>Transaction to Delete
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Description</label>
                                <div class="fw-bold">@Model.Description</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Amount</label>
                                <div class="fw-bold text-@Model.TypeColor">@Model.AmountDisplay</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Date</label>
                                <div>@Model.TransactionDate.ToString("dddd, MMMM dd, yyyy")</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Category</label>
                                <div>
                                    <span class="badge bg-secondary">@Model.Category</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Account</label>
                                <div>@Model.AccountName</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold text-muted">Type</label>
                                <div>
                                    <span class="badge bg-@Model.TypeColor">@Model.TypeDisplay</span>
                                    @if (Model.IsRecurring)
                                    {
                                        <span class="badge bg-info ms-1">Recurring</span>
                                    }
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Reference))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold text-muted">Reference</label>
                                    <div class="font-monospace">@Model.Reference</div>
                                </div>
                            }
                            @if (Model.HasReceipt)
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold text-muted">Receipt</label>
                                    <div>
                                        <i class="fas fa-paperclip text-success me-1"></i>
                                        <span class="text-success">Attached</span>
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="col-12">
                                    <label class="form-label fw-semibold text-muted">Notes</label>
                                    <div class="bg-light rounded p-2">@Model.Notes</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Deletion Reason Form -->
                <form asp-action="Delete" method="post">
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-warning bg-opacity-10">
                            <h5 class="fw-bold mb-0 text-warning">
                                <i class="fas fa-clipboard-list me-2"></i>Deletion Reason
                            </h5>
                        </div>
                        <div class="card-body">
                            <label asp-for="DeletionReason" class="form-label fw-semibold">
                                Why are you deleting this transaction? <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="DeletionReason" class="form-control" rows="4" 
                                      placeholder="Please provide a detailed reason for deleting this transaction for audit purposes..."
                                      required></textarea>
                            <span asp-validation-for="DeletionReason" class="text-danger"></span>
                            <div class="form-text">
                                This information is required for audit compliance and will be permanently recorded.
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Yes, Delete Transaction
                        </button>
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Account Impact -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h6 class="fw-bold mb-0">
                            <i class="fas fa-balance-scale me-2"></i>Account Impact
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Account</label>
                            <div>@Model.AccountName</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Current Balance</label>
                            <div class="fw-bold">@Model.GetCurrencySymbol()@Model.AccountCurrentBalance.ToString("N2")</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Balance After Deletion</label>
                            <div class="fw-bold text-@(Model.NewAccountBalance < Model.AccountCurrentBalance ? "danger" : "success")">
                                @Model.GetCurrencySymbol()@Model.NewAccountBalance.ToString("N2")
                            </div>
                        </div>
                        <div class="alert alert-info small mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            Your account balance will be adjusted to reflect the removal of this @Model.TypeDisplay.ToLower().
                        </div>
                    </div>
                </div>

                <!-- Transaction Info -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="fw-bold mb-0">
                            <i class="fas fa-info-circle me-2"></i>Transaction Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Transaction ID</label>
                            <div class="font-monospace small">#@Model.Id.ToString("D6")</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Created On</label>
                            <div class="small">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted small">Age</label>
                            <div class="small">@((DateTime.Now - Model.CreatedAt).Days) days old</div>
                        </div>
                        <div class="mb-0">
                            <label class="form-label fw-semibold text-muted small">Currency</label>
                            <div class="small">
                                <span class="badge bg-info">@Model.UserCurrency.ToString()</span>
                                <span class="ms-1">(@Model.GetCurrencySymbol())</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            @if (Model.CanDelete)
            {
                <text>
                // Auto-focus on deletion reason field
                $('#DeletionReason').focus();

                // Form submission confirmation
                $('form').on('submit', function(e) {
                    var reason = $('#DeletionReason').val().trim();
                    if (reason.length @Html.Raw("<") 10) {
                        e.preventDefault();
                        alert('Please provide a more detailed reason for this deletion (at least 10 characters).');
                        $('#DeletionReason').focus();
                        return false;
                    }
                    
                    if (!confirm('Are you absolutely sure you want to delete this transaction? This action is PERMANENT and cannot be undone.')) {
                        e.preventDefault();
                        return false;
                    }
                    
                    return confirm('Last chance to cancel! Click OK to permanently delete this transaction.');
                });


                </text>
            }
        });
    </script>
} 